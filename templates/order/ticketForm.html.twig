{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

<section>
	<h3 class="major">Veuillez entrer les détails pour chaque visiteur</h3>
		<form method="post" action="#">
			{#{% for order in ticketsNumber %}#}
                <div class="fields">
                    <div class="field half">
                        <label for="firstNameVisitor">Nom</label>
                        <input type="text" name="firstNameVisitor" id="firstNameVisitor" value=""/>
                    </div>
                    <div class="field half">
                        <label for="lastNameVisitor">Prénom</label>
                        <input type="text" name="lastNameVisitor" id="lastNameVisitor" value=""/>
                    </div>
                    <div class="field half">
				        <label for="country">Pays</label>
					    <input type="text" name="country" id="country" value=""/>
				    </div>
                    <div class="field half">
                        <label for="birthdayVisitor">Date de naissance</label>
                        <input type="date" name="birthdayVisitor" id="birthdayVisitor" value=""/>
                    </div>
                    <div class="field half">
						<input type="checkbox" id="reduction" name="reduction">
						<label for="reduction">Tarif réduit</label>
                        <p>Un justificatif (carte étudiant, carte militaire, etc.) pourra vous être demandé lors de votre entrée au musée.
						</div>
                    
                </div>
            {#{% endfor %}#}
            											
				<ul class="actions">
					<input type="submit" value="Valider" class="primary" />
				</ul>
		</form>
	</section>

{% endblock %}
